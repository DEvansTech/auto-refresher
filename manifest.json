{
    "name" : "Just Refresh",
    "version" : "1.1",
    "description" : "One-click toggle auto-refresh",
    "options_page" : "options.html",
    "permissions" : ["activeTab", "storage"],
    "browser_action": {},
    "commands" : {
        "toggle-refresh" : {
            "suggested_key" : {
                "default" : "Alt+R",
                "mac" : "Alt+R"
            },
            "description" : "Toggle refresh with keybind"
        }
    },
    "background" : {
        "scripts" : ["background.js", "jquery.min.js"],
        "persistent" : false
    },
    "icons": {
        "128": "images/just_refresh128.png"
    },
    "manifest_version" : 2
}
